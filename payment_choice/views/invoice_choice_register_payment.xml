<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_move_form" model="ir.ui.view">
        <field name="name">account.move.form</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <header>
                <button name="action_register_payment_choice" id="account_invoice_choice_payment_btn"
                    type="object" class="oe_highlight"
                    attrs="{'invisible': ['|', '|', ('state', '!=', 'posted'), ('payment_state', 'not in', ('not_paid', 'partial')), ('move_type', 'not in', ('out_invoice', 'out_refund', 'in_invoice', 'in_refund', 'out_receipt', 'in_receipt'))]}"
                    context="{'dont_redirect_to_payments': False}"
                    string="Register Choice Payment"
                     />
            </header>
        </field>
    </record>
</odoo>