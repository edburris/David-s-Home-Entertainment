<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header>
                <button id="sales_action_register_payment_choice_btn" name="sale_action_register_payment_choice"
                    string="Regisiter Choice Payment"
                    type="object" class="btn-primary"
                    attrs="{'invisible': ['|', ('invoice_status', '!=', 'no'), ('state', 'not in', ['sale','draft','sent']) ] }"/>
            </header>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <button class="btn oe_stat_button btn-light flex-shrink-0 mb-0 py-0 border-0 border-start border-bottom rounded-0 text-start text-nowrap text-capitalize"
                attrs="{'invisible': [('authorized_transaction_ids', '!=', [])] }"
                string="Payment Made"
                disabled="false">
                <!-- <div class="o_field_widget o_stat_info">
                                    <span class="o_stat_text"> Payment Made</span>
                </div> -->
                </button>
            </xpath>

            
        </field>
    </record>
</odoo>