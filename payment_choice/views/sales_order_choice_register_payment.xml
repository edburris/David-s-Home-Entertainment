<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header>
                <button id="sales_action_register_payment_choice_btn" name="sale_action_register_payment_choice"
                    string="Regisiter Choice Payment"
                    type="object" class="btn-primary"
                    attrs="{'invisible': ['|', ('amount_invoiced', '>=', 'amount_total'), ('invoice_status', '!=', 'no'), ('state', 'not in', ['sale','draft','sent']) ] }"/>
            </header>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <div class="badge rounded-pill text-bg-secondary fs-6 border-0" style="margin-left:.5rem; margin-right:.5rem;"
                    In Payment
                </div>
            </xpath>

            
        </field>
    </record>
</odoo>