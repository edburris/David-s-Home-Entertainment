<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_order_form" model="ir.ui.view">
        <field name="name">sale.order.form</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <header>
                <field name="choice_payment_made" invisible="1"/>'
                <button id="sales_action_register_payment_choice_btn" name="sale_action_register_payment_choice"
                    string="Regisiter Choice Payment"
                    type="object" class="btn-primary"
                    attrs="{'invisible': ['|', ('invoice_status', '!=', 'no'), ('state', 'not in', ['sale','draft','sent']), [('choice_payment_made', '=', True)] ] }"/>
            </header>
            <xpath expr="//div[@class='oe_button_box']" position="inside">
                <field name="choice_payment_made" invisible="1"/>'
                <button class="btn oe_stat_button btn-light flex-shrink-0 mb-0 py-0 border-0 border-start border-bottom rounded-0 text-capitalize"
                type="object"
                id="change_choice_payment_made_btn"
                string="Payment Made"
                attrs="{'invisible': [('choice_payment_made', '=', False)] }">

                    <i class="fa fa-fw o_button_icon fa-credit-card icon"></i>
                    <div class="o_field_widget o_stat_info" style="margin-top:.15rem;">
                        <span class="o_stat_text">Payment</span>
                        <span class="o_stat_text">Made</span>
                    </div>
                </button>
                <button class="btn oe_stat_button btn-danger flex-shrink-0 mb-0 py-0 border-0 border-start border-bottom rounded-0 text-capitalize"
                type="object"
                id="change_choice_payment_not_made_btn"
                name="change_choice_payment_made"
                string="Payment Not Made"
                attrs="{'invisible': [('choice_payment_made', '=', True)] }"
                >
                    <i class="fa fa-fw o_button_icon fa-credit-card icon" style="color:red;"></i>
                    <div class="o_field_widget o_stat_info" style="margin-top:.15rem; color:red;">
                        <span class="o_stat_text">Payment</span>
                        <span class="o_stat_text">Not Made</span>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>